{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "v2_layer_properties",
  "title": "V2 Layer Properties",
  "description": "Properties schema for an image layer",
  "definitions": {
    "V2LayerName": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9-.]+$",
      "minLength": 3,
      "maxLength": 100
    },
    "V2BuildParameterName": {
      "description": "The name of a build parameter, should be a valid PowerShell parameter name",
      "type": "string",
      "pattern": "^[a-zA-Z][a-zA-Z0-9_]*$",
      "minLength": 1,
      "maxLength": 63
    },
    "V2BuildParameterValue": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "V2CustomizerWindowsUpdate": {
      "type": "object",
      "properties": {
        "type": {
          "const": "WindowsUpdate"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 150
        },
        "searchCriteria": {
          "type": "string",
          "description": "Windows Update search criteria",
          "maxLength": 500
        },
        "filters": {
          "type": "array",
          "items": {
            "type": "string",
            "maxLength": 500
          }
        },
        "updateLimit": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000,
          "default": 1000
        }
      },
      "required": [
        "type",
        "name"
      ]
    },
    "V2CustomizerWindowsRestart": {
      "type": "object",
      "properties": {
        "type": {
          "const": "WindowsRestart"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 150
        },
        "restartCheckCommand": {
          "type": "string",
          "default": ""
        },
        "restartCommand": {
          "type": "string",
          "default": "shutdown /r /f /t 0 /c \"packer restart\""
        },
        "restartTimeout": {
          "type": "string",
          "pattern": "^[0-9]+[smh]$",
          "default": "5m",
          "description": "Timeout in format like '5m', '30s', '1h'"
        }
      },
      "required": [
        "type",
        "name"
      ]
    },
    "V2CustomizerFile": {
      "type": "object",
      "properties": {
        "type": {
          "const": "File"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 150
        },
        "sourceUri": {
          "type": "string",
          "format": "uri",
          "description": "URL to download the file from"
        },
        "destination": {
          "type": "string",
          "description": "Local path where file should be saved",
          "maxLength": 260
        },
        "sha256Checksum": {
          "type": "string",
          "pattern": "^[a-fA-F0-9]{64}$",
          "description": "Expected SHA256 checksum for file validation"
        }
      },
      "required": [
        "type",
        "name",
        "sourceUri",
        "destination"
      ]
    },
    "V2CustomizerPowerShell": {
      "type": "object",
      "properties": {
        "type": {
          "const": "PowerShell"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 150
        },
        "inline": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 10000
          },
          "minItems": 1,
          "maxItems": 1000,
          "description": "Array of PowerShell commands/scripts to execute inline"
        },
        "script": {
          "type": "string",
          "description": "Path to PowerShell script file to execute",
          "maxLength": 260
        },
        "validExitCodes": {
          "type": "array",
          "items": {
            "type": "integer"
          },
          "default": [
            0
          ],
          "description": "List of valid exit codes"
        },
        "elevated": {
          "type": "boolean",
          "default": false,
          "description": "Whether to run PowerShell with elevated privileges"
        },
        "system": {
          "type": "boolean",
          "default": false,
          "description": "Whether to run PowerShell with elevated privileges as the local system user"
        },
        "executionPolicy": {
          "type": "string",
          "enum": [
            "Bypass",
            "Unrestricted",
            "RemoteSigned",
            "AllSigned",
            "Restricted"
          ],
          "default": "Bypass",
          "description": "PowerShell execution policy for this script"
        },
        "sha256Checksum": {
          "type": "string",
          "pattern": "^[a-fA-F0-9]{64}$",
          "description": "Expected SHA256 checksum for file validation"
        }
      },
      "oneOf": [
        {
          "required": [
            "type",
            "name",
            "inline"
          ]
        },
        {
          "required": [
            "type",
            "name",
            "script"
          ]
        }
      ],
      "not": {
        "allOf": [
          {
            "required": [
              "inline"
            ]
          },
          {
            "required": [
              "script"
            ]
          }
        ]
      }
    },
    "V2Customizer": {
      "oneOf": [
        {
          "$ref": "#/definitions/V2CustomizerWindowsUpdate"
        },
        {
          "$ref": "#/definitions/V2CustomizerWindowsRestart"
        },
        {
          "$ref": "#/definitions/V2CustomizerFile"
        },
        {
          "$ref": "#/definitions/V2CustomizerPowerShell"
        }
      ]
    },
    "V2LayerProperties": {
      "title": "V2 Layer Properties",
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "enum": [
            "v2",
            "v2.1"
          ]
        },
        "name": {
          "$ref": "#/definitions/V2LayerName"
        },
        "description": {
          "type": "string",
          "maxLength": 500
        },
        "author": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "maxLength": 100
            },
            "email": {
              "type": "string",
              "format": "email"
            }
          },
          "required": [
            "name"
          ]
        },
        "base_image": {
          "type": "object",
          "oneOf": [
            {
              "title": "Managed Image",
              "type": "object",
              "properties": {
                "type": {
                  "const": "ManagedImage"
                },
                "imageId": {
                  "type": "string"
                }
              },
              "required": [
                "type",
                "imageId"
              ]
            },
            {
              "title": "Platform Image",
              "type": "object",
              "properties": {
                "type": {
                  "const": "PlatformImage"
                },
                "offer": {
                  "type": "string"
                },
                "planInfo": {
                  "title": "Platform Image Plan Info",
                  "type": "object",
                  "properties": {
                    "planName": {
                      "type": "string"
                    },
                    "planProduct": {
                      "type": "string"
                    },
                    "planPublisher": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "planName",
                    "planProduct",
                    "planPublisher"
                  ]
                },
                "publisher": {
                  "type": "string"
                },
                "sku": {
                  "type": "string"
                },
                "version": {
                  "type": "string"
                }
              },
              "required": [
                "type",
                "offer",
                "publisher",
                "sku",
                "version"
              ]
            },
            {
              "title": "Shared Image Version",
              "type": "object",
              "properties": {
                "type": {
                  "const": "SharedImageVersion"
                },
                "imageVersionId": {
                  "type": "string"
                }
              },
              "required": [
                "type",
                "imageVersionId"
              ]
            }
          ]
        },
        "network": {
          "type": "object",
          "properties": {
            "http_proxy_whitelist": {
              "description": "HTTP(s) hosts that are whitelisted in the proxy. Note that the application must be configured to use the proxy or support Windows IE proxy settings",
              "type": "array",
              "maxItems": 100,
              "items": {
                "type": "string",
                "pattern": "^[\\w\\-.*]+:[\\d*]+$",
                "description": "Hostname:port combination, supports * wildcards"
              }
            }
          }
        },
        "platform_version": {
          "description": "The version of the AVD platform this layer expects and requires to work",
          "type": "string",
          "enum": [
            "2"
          ]
        },
        "build_parameters": {
          "title": "LayerBuildParameters",
          "description": "Parameters required during the build of the image",
          "type": "object",
          "maxProperties": 20,
          "propertyNames": {
            "$ref": "#/definitions/V2BuildParameterName"
          },
          "additionalProperties": {
            "title": "Layer Parameter",
            "type": "object",
            "properties": {
              "description": {
                "type": "string",
                "minLength": 5,
                "maxLength": 200
              },
              "enum": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/V2BuildParameterValue"
                }
              },
              "default": {
                "$ref": "#/definitions/V2BuildParameterValue"
              }
            },
            "required": [
              "description"
            ]
          }
        },
        "customizers": {
          "type": "object",
          "properties": {
            "pre": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/V2Customizer"
              },
              "maxItems": 100
            },
            "post": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/V2Customizer"
              },
              "maxItems": 100
            }
          }
        }
      },
      "required": [
        "version",
        "name",
        "author",
        "platform_version"
      ]
    },
    "V2BundleProperties": {
      "title": "V2 Bundle Properties",
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "enum": [
            "v2"
          ]
        },
        "cli_version": {
          "type": "string",
          "maxLength": 50
        },
        "layers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/V2LayerProperties"
          },
          "minItems": 1,
          "maxItems": 50
        },
        "build_parameters": {
          "$ref": "#/definitions/V2BuildParameterLayers"
        }
      },
      "required": [
        "version",
        "cli_version",
        "layers"
      ]
    },
    "V2BuildParameterLayerValues": {
      "title": "BuildParameterLayerValues",
      "type": "object",
      "maxProperties": 20,
      "propertyNames": {
        "$ref": "#/definitions/V2BuildParameterName"
      },
      "additionalProperties": {
        "title": "BuildParameterValue",
        "type": "object",
        "properties": {
          "value": {
            "$ref": "#/definitions/V2BuildParameterValue"
          }
        },
        "required": [
          "value"
        ]
      }
    },
    "V2BuildParameterLayers": {
      "type": "object",
      "maxProperties": 50,
      "propertyNames": {
        "$ref": "#/definitions/V2LayerName"
      },
      "additionalProperties": {
        "$ref": "#/definitions/V2BuildParameterLayerValues"
      }
    },
    "V2BuildParameters": {
      "title": "V2 Build parameters",
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "enum": [
            "v2"
          ]
        },
        "layers": {
          "$ref": "#/definitions/V2BuildParameterLayers"
        }
      },
      "required": [
        "version",
        "layers"
      ]
    }
  }
}